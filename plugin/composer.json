{
    "name": "recruiting-playbook/recruiting-playbook",
    "description": "Professionelles Bewerbermanagement fÃ¼r WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0",
        "freemius/wordpress-sdk": "^2.13",
        "woocommerce/action-scheduler": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "brain/monkey": "^2.6",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "RecruitingPlaybook\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RecruitingPlaybook\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse src/ --level=5"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
