{
    "name": "recruiting-playbook",
    "version": "1.2.2",
    "description": "WordPress Recruiting Plugin",
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:css": "tailwindcss -i ./assets/src/css/main.css -o ./assets/dist/css/frontend.css --watch",
        "dev:admin-css": "tailwindcss -i ./assets/src/css/admin.css -o ./assets/dist/css/admin.css --watch",
        "dev:wizard-css": "tailwindcss -i ./assets/src/css/wizard.css -o ./assets/dist/css/wizard.css --watch",
        "dev:kanban-css": "tailwindcss -i ./assets/src/css/admin-kanban.css -o ./assets/dist/css/admin-kanban.css --watch",
        "dev:applicant-css": "tailwindcss -i ./assets/src/css/admin-applicant.css -o ./assets/dist/css/admin-applicant.css --watch",
        "dev:talent-pool-css": "tailwindcss -i ./assets/src/css/admin-talent-pool.css -o ./assets/dist/css/admin-talent-pool.css --watch",
        "dev:email-css": "tailwindcss -i ./assets/src/css/admin-email.css -o ./assets/dist/css/admin-email.css --watch",
        "dev:form-builder-css": "tailwindcss -i ./assets/src/css/admin-form-builder.css -o ./assets/dist/css/admin-form-builder.css --watch",
        "dev:custom-fields-css": "tailwindcss -i ./assets/src/css/custom-fields.css -o ./assets/dist/css/custom-fields.css --watch",
        "dev:match-modal-css": "tailwindcss -i ./assets/src/css/match-modal.css -o ./assets/dist/css/match-modal.css --watch",
        "dev:job-finder-css": "tailwindcss -i ./assets/src/css/job-finder.css -o ./assets/dist/css/job-finder.css --watch",
        "dev:blocks-editor-css": "tailwindcss -i ./assets/src/css/blocks-editor.css -o ./assets/dist/css/blocks-editor.css --watch",
        "dev:js": "esbuild assets/src/js/frontend.js --bundle --sourcemap --outfile=assets/dist/js/frontend.js --watch",
        "dev:application-form-js": "esbuild assets/src/js/application-form.js --bundle --sourcemap --outfile=assets/dist/js/application-form.js --watch",
        "dev:custom-fields-js": "esbuild assets/src/js/custom-fields-form.js --bundle --sourcemap --outfile=assets/dist/js/custom-fields-form.js --watch",
        "dev:wizard-js": "esbuild assets/src/js/wizard.js --bundle --sourcemap --outfile=assets/dist/js/wizard.js --watch",
        "dev:admin-js": "wp-scripts start",
        "build": "npm-run-all build:1-admin-js build:2-*",
        "build:1-admin-js": "wp-scripts build",
        "build:2-css": "tailwindcss -i ./assets/src/css/main.css -o ./assets/dist/css/frontend.css --minify",
        "build:2-admin-css": "tailwindcss -i ./assets/src/css/admin.css -o ./assets/dist/css/admin.css --minify",
        "build:2-wizard-css": "tailwindcss -i ./assets/src/css/wizard.css -o ./assets/dist/css/wizard.css --minify",
        "build:2-kanban-css": "tailwindcss -i ./assets/src/css/admin-kanban.css -o ./assets/dist/css/admin-kanban.css --minify",
        "build:2-applicant-css": "tailwindcss -i ./assets/src/css/admin-applicant.css -o ./assets/dist/css/admin-applicant.css --minify",
        "build:2-talent-pool-css": "tailwindcss -i ./assets/src/css/admin-talent-pool.css -o ./assets/dist/css/admin-talent-pool.css --minify",
        "build:2-email-css": "tailwindcss -i ./assets/src/css/admin-email.css -o ./assets/dist/css/admin-email.css --minify",
        "build:2-form-builder-css": "tailwindcss -i ./assets/src/css/admin-form-builder.css -o ./assets/dist/css/admin-form-builder.css --minify",
        "build:2-custom-fields-css": "tailwindcss -i ./assets/src/css/custom-fields.css -o ./assets/dist/css/custom-fields.css --minify",
        "build:2-match-modal-css": "tailwindcss -i ./assets/src/css/match-modal.css -o ./assets/dist/css/match-modal.css --minify",
        "build:2-job-finder-css": "tailwindcss -i ./assets/src/css/job-finder.css -o ./assets/dist/css/job-finder.css --minify",
        "build:2-blocks-editor-css": "tailwindcss -i ./assets/src/css/blocks-editor.css -o ./assets/dist/css/blocks-editor.css --minify",
        "build:2-frontend-js": "esbuild assets/src/js/frontend.js --bundle --minify --outfile=assets/dist/js/frontend.js",
        "build:2-application-form-js": "esbuild assets/src/js/application-form.js --bundle --minify --outfile=assets/dist/js/application-form.js",
        "build:2-custom-fields-js": "esbuild assets/src/js/custom-fields-form.js --bundle --minify --outfile=assets/dist/js/custom-fields-form.js",
        "build:2-wizard-js": "esbuild assets/src/js/wizard.js --bundle --minify --outfile=assets/dist/js/wizard.js",
        "build:2-alpine": "cp node_modules/alpinejs/dist/cdn.min.js assets/dist/js/alpine.min.js",
        "build:2-freemius-css": "cp assets/src/css/freemius-pricing-custom.css assets/dist/css/freemius-pricing-custom.css",
        "lint:js": "wp-scripts lint-js",
        "lint:css": "wp-scripts lint-style",
        "test:js": "wp-scripts test-unit-js",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "pot": "wp i18n make-pot . languages/recruiting-playbook.pot --exclude=node_modules,vendor,tests"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@radix-ui/react-slot": "^1.2.4",
        "@wordpress/api-fetch": "^7.38.0",
        "@wordpress/components": "^28.0.0",
        "@wordpress/element": "^6.38.0",
        "@wordpress/i18n": "^6.11.0",
        "@wordpress/icons": "^10.0.0",
        "alpinejs": "^3.14.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dompurify": "^3.3.1",
        "lucide-react": "^0.563.0",
        "prop-types": "^15.8.1",
        "recharts": "^3.3.0",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@babel/runtime": "^7.28.6",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@wordpress/scripts": "^28.0.0",
        "archiver": "^7.0.1",
        "autoprefixer": "^10.4.20",
        "cssnano": "^7.1.2",
        "esbuild": "^0.24.0",
        "glob": "^13.0.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.47",
        "postcss-cli": "^11.0.1",
        "tailwindcss": "^3.4.14"
    }
}
