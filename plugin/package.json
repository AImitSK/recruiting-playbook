{
    "name": "recruiting-playbook",
    "version": "1.0.0",
    "description": "WordPress Recruiting Plugin",
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:css": "tailwindcss -i ./assets/src/css/main.css -o ./assets/dist/css/frontend.css --watch",
        "dev:admin-css": "tailwindcss -i ./assets/src/css/admin.css -o ./assets/dist/css/admin.css --watch",
        "dev:wizard-css": "tailwindcss -i ./assets/src/css/wizard.css -o ./assets/dist/css/wizard.css --watch",
        "dev:kanban-css": "tailwindcss -i ./assets/src/css/admin-kanban.css -o ./assets/dist/css/admin-kanban.css --watch",
        "dev:applicant-css": "tailwindcss -i ./assets/src/css/admin-applicant.css -o ./assets/dist/css/admin-applicant.css --watch",
        "dev:talent-pool-css": "tailwindcss -i ./assets/src/css/admin-talent-pool.css -o ./assets/dist/css/admin-talent-pool.css --watch",
        "dev:email-css": "cp ./assets/src/css/admin-email.css ./assets/dist/css/admin-email.css",
        "dev:js": "esbuild assets/src/js/frontend.js --bundle --sourcemap --outfile=assets/dist/js/frontend.js --watch",
        "dev:wizard-js": "esbuild assets/src/js/wizard.js --bundle --sourcemap --outfile=assets/dist/js/wizard.js --watch",
        "dev:admin-js": "wp-scripts start --webpack-src-dir=assets/src/js/admin --output-path=assets/dist/js",
        "build": "npm-run-all build:1-admin-js build:2-*",
        "build:1-admin-js": "wp-scripts build --webpack-src-dir=assets/src/js/admin --output-path=assets/dist/js",
        "build:2-css": "tailwindcss -i ./assets/src/css/main.css -o ./assets/dist/css/frontend.css --minify",
        "build:2-admin-css": "tailwindcss -i ./assets/src/css/admin.css -o ./assets/dist/css/admin.css --minify",
        "build:2-wizard-css": "tailwindcss -i ./assets/src/css/wizard.css -o ./assets/dist/css/wizard.css --minify",
        "build:2-kanban-css": "tailwindcss -i ./assets/src/css/admin-kanban.css -o ./assets/dist/css/admin-kanban.css --minify",
        "build:2-applicant-css": "tailwindcss -i ./assets/src/css/admin-applicant.css -o ./assets/dist/css/admin-applicant.css --minify",
        "build:2-talent-pool-css": "tailwindcss -i ./assets/src/css/admin-talent-pool.css -o ./assets/dist/css/admin-talent-pool.css --minify",
        "build:2-email-css": "cp ./assets/src/css/admin-email.css ./assets/dist/css/admin-email.css",
        "build:2-frontend-js": "esbuild assets/src/js/frontend.js --bundle --minify --outfile=assets/dist/js/frontend.js",
        "build:2-wizard-js": "esbuild assets/src/js/wizard.js --bundle --minify --outfile=assets/dist/js/wizard.js",
        "build:2-alpine": "cp node_modules/alpinejs/dist/cdn.min.js assets/dist/js/alpine.min.js",
        "lint:js": "wp-scripts lint-js",
        "lint:css": "wp-scripts lint-style",
        "test:js": "wp-scripts test-unit-js",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "pot": "wp i18n make-pot . languages/recruiting-playbook.pot --exclude=node_modules,vendor,tests"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@wordpress/api-fetch": "^7.38.0",
        "@wordpress/components": "^28.0.0",
        "@wordpress/element": "^6.38.0",
        "@wordpress/i18n": "^6.11.0",
        "@wordpress/icons": "^10.0.0",
        "alpinejs": "^3.14.0"
    },
    "devDependencies": {
        "@babel/runtime": "^7.28.6",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@wordpress/scripts": "^28.0.0",
        "autoprefixer": "^10.4.20",
        "esbuild": "^0.24.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.14"
    }
}
